package edu.iful.oop;

public class Vector{
    private double[] vector;
    private int length;

    public Vector(int a) {
        length=a;
        vector=new double[a];
        vectorRandomFill();
    }

    public double[] getVector() {
        return vector;
    }

    public void setVector(double[] vector) {
        this.vector = vector;
    }
    //Друк вектора
    public void print(){
            for (int i = 0; i < vector.length; i++) {
                System.out.println(vector[i] + " ");
            }
        System.out.println();
    }

    //Заповнення вектора
    public void vectorRandomFill(){
        for (int i = 0; i < vector.length; i++) {
            vector[i]=(int) (Math.random()*5);
        }
    }

    //Метод для зміни довжини вектор
    public void lenght(int a){
        double[] newVector=new double[a];
        if(vector.length<newVector.length) {
            for (int i = 0; i < vector.length; i++) {
                newVector[i] = vector[i];
            }
            for (int i=vector.length; i<newVector.length;i++){
                if(newVector[i]==0.0){
                    newVector[i]=(int) (Math.random()*10);
                }
            }
        }
        else {
            for (int i = 0; i < newVector.length; i++) {
                    newVector[i] = vector[i];
                }
        }
        vector=newVector;
    }

    //Скалярний добуток векторів
    public void scalarProduct(Vector other) {
        if (vector.length != other.vector.length) {
            System.out.println("Вектори мають різні довжини");
        } else {
            int lenght = 0;
            double[] result = new double[1];
            for (int i = 0; i < vector.length; i++) {
                lenght += vector[i] * other.vector[i];
                result[0] = lenght;
            }
        }
    }
}
