package edu.iful.oop;

public class Vector{
    private double[] array;
    private int length;

    public Vector(int a) {
        length=a;
        array =new double[a];
        vectorRandomFill();
    }

    public double[] getArray() {
        return array;
    }

    public void setArray(double[] array) {
        this.array = array;
    }
    //Друк вектора
    public void print(){
            for (int i = 0; i < array.length; i++) {
                System.out.println(array[i] + " ");
            }
        System.out.println();
    }

    //Заповнення вектора
    public void vectorRandomFill(){
        for (int i = 0; i < array.length; i++) {
            array[i]=(int) (Math.random() * 20 - 8);
        }
    }

    //Скалярний добуток векторів
    public void dotProduct(Vector other) {
        if (array.length != other.array.length) {
            System.out.println("Вектори мають різні довжини");
        } else {
            double result=0;
            for (int i = 0; i < array.length; i++) {
                result += array[i] * other.array[i];
            }
        }
    }

    public void addition(Vector other){
        double[] result = new double[array.length];
        if (array.length != other.array.length) {
            System.out.println("Вектори мають різні довжини");
        } else {
            for (int i = 0; i < array.length; i++) {
                result[i]= array[i] + other.array[i];
            }
        }
        array=result;
    }

    public void subtract(Vector other){
        double[] result = new double[array.length];
        if (array.length != other.array.length) {
            System.out.println("Вектори мають різні довжини");
        } else {
            for (int i = 0; i < array.length; i++) {
                result[i]= array[i] - other.array[i];
            }
        }
        array=result;
    }

    public void minMax() {
        double max= array[0];
        double min= array[0];
        for (int i = 0; i< array.length; i++){
            if (array[i] > max) {
                max = array[i];
            }
            if (array[i] < min) {
                min = array[i];
            }
        }
        System.out.println("Макcимальний елемент вектора: " + max);
        System.out.println("Мінімальний елемент вектора: " + min);
    }

}
