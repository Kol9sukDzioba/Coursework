package edu.iful.oop;

import java.util.Scanner;

public class Vector{
    private int rows;
    private Integer[] vector;
    private Integer[] newVector;
    public Vector(int a) {
        this.rows = a;
        vectorRandomFill(a);
    }

    public Vector() {
    }

    public Integer[] getVector() {
        return vector;
    }

    public void printVector(Integer[] vector){
            for (int i = 0; i < vector.length; i++) {
                System.out.println(vector[i] + " ");
            }
        System.out.println();
    }

    public void vectorRandomFill(int a){
        vector=new Integer[a];
        for (int i = 0; i < a; i++) {
            vector[i]=(int) (Math.random()*10);
        }
        printVector(vector);
    }

    public void vectorLenght(int a){
        newVector=new Integer[a];
        if(vector.length<newVector.length) {
            for (int i = 0; i < vector.length; i++) {
                newVector[i] = vector[i];
            }
        }
        else {
            for (int i = 0; i < newVector.length; i++) {
                    newVector[i] = vector[i];
                }
        }

        for (int i=0;i<newVector.length;i++){
            if(newVector[i]==null){
                newVector[i]=(int) (Math.random()*10);
            }
        }
        vector=newVector;
        System.out.println("Змінений розмір вектора: "+vector.length);
        printVector(vector);

    }

    public void vectorsScalarProduct(Integer [] vector1, Integer []vector2){
        int lenght=0;
        Integer[] result = new Integer[1];
        for (int i = 0; i < vector1.length; i++) {
            lenght += vector1[i]*vector2[i];
            result[0]=lenght;
        }
        System.out.println("Скалярний добуток векторів: ");
        printVector(result);
    }

    }


